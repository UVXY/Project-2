  <link href="https://fonts.googleapis.com/css?family=Carter+One|Archivo+Black|Patua+One|Shrikhand|Tajawal" rel="stylesheet">
</head>

<body>
  <div id="title">
    <nav id="barbackground" class="navbar navbar-expand-lg">
      <a id="logo" class="navbar-brand" href="drafthome.html">Fit Finder</a>
      <button id="toggler" class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNav"
        aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
        <span class="navbar-toggler-icon"></span>
      </button>
      <div class="collapse navbar-collapse" id="navbarNav">
        <ul class="navbar-nav">
          <li class="nav-item">
            <a id="signIn" class="nav-link" href="/login">Sign In</a>
          </li>
          <li class="nav-item">
            <a id="matches " class="nav-link" href="/matches">Matches</a>
          </li>
          <li class="nav-item">
            <a id="profPage" class="nav-link" href="/profile">Profile</a>
          </li>
        </ul>
      </div>
    </nav>
  </div>

  <div class="card" id="profileCard" style="width: 18rem;">
    {{!-- <img class="img-circle" id="profilePic" src="images/lebron.png" alt="Card image cap"> --}}

    <div class="card-body">
      <h1 id="name">{{{name}}}</h1>
      <ul id="traits">
        <li>Email: {{{email}}}</li>
        <li>Activities: {{{activities}}}</li>
      </ul>

      <form id="signUp" name="signUp" method="get" action="/signUp">
        <label for="Sign_Up"></label>
        <input class="btn" type="submit" value="Edit" />
      </form>
      {{!-- <form id="signUp2" name="signUp2" method="get" action="/signUp2">
        <label for="Sign_Up"></label>
        <input class="btn" type="submit" value="Edit Activities" />
      </form> --}}
      <form id="signout" name="signout" method="get" action="/logout">
        <label for="Sign_Out"></label>
        <input class="btn" type="submit" value="Sign Out" />
      </form>
    </div>
    </form>
  </div>

  {{!-- <div id="lines">
    <hr>
    <hr>
    <hr>
    <hr>
  </div> --}}
